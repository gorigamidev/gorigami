---
interface Props {
    imgUrl : string;
    name : string;
    description: string;
    role: string;
}
const { imgUrl, name, description, role } = Astro.props;
---

<article class="member-card">
    <figure>
        <img src={imgUrl} alt={name}>
    </figure>
    <h4>{ name }</h4>
    <section>
        <p>{ description }</p>
        <h5>{ role }</h5>
    </section>
</article>
<style>
    .member-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        text-align: center;
        padding: 2rem;
        border-radius: 1rem;
        height: 30rem;
        width: 18rem;
        background-color: #e7edee38;
        color: var(--ligth-color);
        box-shadow: 0 0 1rem #ffb32533;
        border-bottom: 1px solid var(--ligth-color);
        box-shadow: 0 0 2rem 0 rgba( 31, 38, 135, 0.37 );
    }
    .member-card>figure{
        height: 13rem;
        width: 13rem;
        border-radius: 100%;
        border-top: .2rem solid var(--purple-color);
    }
    .member-card>figure>img{
        height: 100%;
        width: 100%;
        border-radius: 100%;
        object-fit: contain;
    }
    .member-card >h4{
        font-size: 1.4rem;
    }
    .member-card >section{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .member-card p{
        font-size: 1.3rem;
    }
    .member-card h5{
        font-size: 1rem;
        font-family: var(--primary-font);
        opacity: .8;
    }

</style>