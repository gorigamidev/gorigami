---
// Navigation - Brand Lineage: minimal, clean
import LanguageSwitcher from "./LanguageSwitcher.astro";
---

<nav id="main-nav">
	<div id="logo">
		<a href="/"><h2>gorigami<span>.</span></h2></a>
	</div>
	<div id="links">
		<ul>
			<li>
				<a href="/#what-we-build" data-i18n="nav.whatWeBuild">Build</a>
			</li>
			<li><a href="/#team" data-i18n="nav.team">Team</a></li>
			<li><a href="/#contact" data-i18n="nav.contact">Contact</a></li>
		</ul>
		<LanguageSwitcher />
	</div>
</nav>

<nav id="mobile-nav">
	<div id="logo">
		<a href="/"><h2>gg<span>.</span></h2></a>
	</div>
	<div id="links">
		<ul>
			<li>
				<a href="/#what-we-build" data-i18n="nav.whatWeBuild">Build</a>
			</li>
			<li><a href="/#team" data-i18n="nav.team">Team</a></li>
			<li><a href="/#contact" data-i18n="nav.contact">Contact</a></li>
		</ul>
		<LanguageSwitcher />
	</div>
</nav>

<style>
	#mobile-nav {
		display: none;
	}

	#main-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.5rem 10%;
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 100;
		background: rgba(255, 255, 255, 0.95);
		border-bottom: 1px solid var(--light-gray);
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
	}

	/* Logo uses Nautilus font */
	#logo {
		font-family: var(--logo-font);
		color: var(--ink-black);
		font-size: 1.5rem;
		margin: 0;
	}

	#logo > a {
		text-decoration: none;
		color: var(--ink-black);
	}

	#logo h2 {
		margin: 0;
		font-weight: normal;
		font-family: var(--logo-font);
	}

	#logo span {
		color: var(--mid-gray);
	}

	/* Links use body font */
	#links {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		font-family: var(--body-font);
		font-weight: 500;
	}

	#links ul {
		display: flex;
		gap: 2rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	#links > ul > li {
		text-align: center;
		padding: 0;
	}

	#links a {
		text-decoration: none;
		color: var(--ink-black);
		font-size: 0.95rem;
		transition: color 0.2s ease;
		position: relative;
	}

	#links a:hover {
		color: var(--mid-gray);
	}

	#links a::after {
		content: "";
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--ink-black);
		transition: width 0.2s ease;
	}

	#links a:hover::after {
		width: 100%;
	}

	@media screen and (max-width: 768px) {
		#main-nav {
			display: none;
		}

		#mobile-nav {
			display: flex;
			position: fixed;
			justify-content: space-between;
			align-items: center;
			bottom: 1rem;
			left: 1rem;
			right: 1rem;
			padding: 1rem 1.5rem;
			background: rgba(255, 255, 255, 0.95);
			border: 1px solid var(--light-gray);
			backdrop-filter: blur(8px);
			-webkit-backdrop-filter: blur(8px);
			z-index: 100;
		}

		#mobile-nav #logo {
			font-size: 1.2rem;
		}

		#mobile-nav #links {
			font-size: 0.85rem;
			gap: 0.75rem;
		}

		#mobile-nav #links > ul {
			gap: 1rem;
		}

		#mobile-nav #links > ul > li {
			min-width: auto;
		}

		#mobile-nav #links a::after {
			display: none;
		}
	}
</style>
