---
// Hero section
---

<section id="hero">
	<div class="hero-bg-shape"></div>
	<div class="hero-content">
		<h1 data-i18n="hero.title">Create & Innovate.</h1>
		<p class="subhead" data-i18n="hero.subhead">
			We're a focused group of makers crafting custom digital systems that
			scale, from startups to enterprise.
		</p>
		<div class="hero-actions">
			<a href="#contact" class="btn-primary" data-i18n="hero.cta"
				>Start your project</a
			>
			<a href="#process" class="btn-secondary" data-i18n="hero.ctaSecondary"
				>See how we build</a
			>
		</div>
	</div>
	<div class="hero-visual">
		<div class="visual-frame">
			<img
				src="/img/GorigamiGorilla.png"
				alt="Gorigami Gorilla"
				class="hero-image"
			/>
		</div>
	</div>
</section>

<style>
	#hero {
		min-height: 100vh;
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		padding: 4rem 10%;
		gap: 6rem;
		background: var(--paper-white);
		position: relative;
		overflow: hidden;
	}

	/* Decorative background shape */
	.hero-bg-shape {
		position: absolute;
		top: -10%;
		right: -5%;
		width: 60%;
		height: 120%;
		background: var(--lavender-mist);
		clip-path: polygon(30% 0%, 100% 0%, 100% 100%, 0% 100%);
		z-index: 0;
		opacity: 0.6;
	}

	.hero-content {
		flex: 1;
		max-width: 600px;
		position: relative;
		z-index: 1;
	}

	.hero-content h1 {
		font-size: 5rem;
		font-weight: 800;
		color: var(--midnight-violet);
		margin-bottom: 2rem;
		line-height: 0.95;
		letter-spacing: -0.02em;
	}

	.subhead {
		font-size: 1.25rem;
		color: var(--mid-gray);
		margin-bottom: 3rem;
		line-height: 1.7;
		font-weight: 400;
	}

	.subhead strong {
		color: var(--midnight-violet);
		font-weight: 500;
	}

	.hero-actions {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
	}

	/* Brand Lineage: Minimal buttons with arrows */
	.btn-primary,
	.btn-secondary {
		padding: 1rem 1.5rem;
		font-weight: 500;
		font-size: 1rem;
		text-decoration: none;
		transition: all 0.2s ease;
		display: inline-block;
		border: 1px solid var(--midnight-violet);
	}

	.btn-primary {
		background: var(--midnight-violet);
		color: var(--paper-white);
	}

	.btn-primary:hover {
		background: var(--accent-hover);
		transform: translateX(4px);
	}

	.btn-secondary {
		background: transparent;
		color: var(--midnight-violet);
	}

	.btn-secondary:hover {
		background: var(--off-white);
		transform: translateX(2px);
	}

	.hero-visual {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 400px;
		position: relative;
		z-index: 1;
	}

	.visual-frame {
		width: 100%;
		max-width: 500px;
		height: auto;
		background: transparent;
		border: none;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}

	.hero-image {
		width: 100%;
		height: auto;
		object-fit: contain;
		opacity: 1;
		filter: none;
	}

	@media screen and (max-width: 768px) {
		#hero {
			flex-direction: column-reverse;
			padding: 3rem 1.5rem;
			min-height: auto;
			gap: 3rem;
		}

		.hero-content {
			max-width: 100%;
			text-align: center;
		}

		.hero-content h1 {
			font-size: 3.5rem;
		}

		.subhead {
			font-size: 1.1rem;
		}

		.hero-actions {
			justify-content: center;
		}

		.visual-frame {
			max-width: 330px;
			height: 400px;
		}

		.hero-image {
			object-fit: cover;
			height: 100%;
		}
	}
</style>
