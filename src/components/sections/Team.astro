---
import { teamMembers } from "../../data/team";
---

<section id="team">
	<div class="team-container">
		<div class="team-header">
			<div class="section-label" data-i18n="team.label">THE TEAM</div>
			<h2 data-i18n="team.title">Inside the Lab</h2>
			<p class="team-subtitle" data-i18n="team.subtitle">
				A small group of builders, designers, and engineers, focused on creating
				systems that last.
			</p>
		</div>

		<div class="team-panels">
			{
				teamMembers.map((member, index) => (
					<div class="team-member member-panel" data-index={index}>
						<div class="vertical-label">{member.verticalLabel}</div>

						<div class="portrait-frame">
							<img
								src={member.imgUrl}
								alt={member.name}
								class="portrait"
								loading="lazy"
								decoding="async"
							/>
						</div>

						<div class="member-info">
							<h3 class="member-name">{member.name}</h3>
							<p class="member-role" data-i18n-field="role">
								{member.role}
							</p>
							<p class="member-descriptor" data-i18n-field="descriptor">
								{member.descriptor}
							</p>
						</div>

						<div class="panel-separator" />
					</div>
				))
			}
		</div>

		<p class="team-tagline" data-i18n="team.tagline">
			Bogot√°, CO. Building globally.
		</p>
	</div>
</section>

<style>
	#team {
		width: 100%;
		padding: 8rem 10%;
		background: var(--paper-white);
		border-top: 1px solid var(--light-gray);
	}

	.team-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.team-header {
		max-width: 800px;
		margin-bottom: 5rem;
	}

	.section-label {
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.15em;
		text-transform: uppercase;
		color: var(--sandy-brown);
		margin-bottom: 1.5rem;
	}

	#team h2 {
		font-size: 3rem;
		color: var(--midnight-violet);
		margin-bottom: 1.5rem;
		font-weight: 800;
		line-height: 1;
	}

	.team-subtitle {
		font-size: 1.25rem;
		color: var(--mid-gray);
		line-height: 1.7;
		font-weight: 400;
	}

	/* Editorial Panels Layout */
	.team-panels {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 4rem;
		margin-bottom: 4rem;
		position: relative;
	}

	.member-panel {
		position: relative;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		max-width: 320px;
	}

	/* Vertical Label - Signature Element */
	.vertical-label {
		font-size: 0.65rem;
		font-weight: 700;
		letter-spacing: 0.25em;
		text-transform: uppercase;
		color: var(--sandy-brown);
		margin-bottom: 0.5rem;
	}

	/* Portrait - Compact */
	.portrait-frame {
		width: 100%;
		height: 280px;
		overflow: hidden;
		background: var(--smoke);
		position: relative;
		border: 1px solid var(--light-gray);
	}

	.portrait {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center 30%;
		filter: grayscale(1) contrast(1.1);
		transition:
			filter 0.3s ease,
			transform 0.3s ease;
	}

	.member-panel:hover .portrait {
		filter: grayscale(0.7) contrast(1.05);
		transform: scale(1.02);
	}

	/* Member Info */
	.member-info {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.member-name {
		font-size: 1.4rem;
		font-weight: 700;
		color: var(--midnight-violet);
		line-height: 1.1;
		margin: 0;
	}

	.member-role {
		font-size: 0.7rem;
		font-weight: 600;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--mid-gray);
		margin: 0;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid var(--light-gray);
	}

	.member-descriptor {
		font-size: 0.95rem;
		color: var(--mid-gray);
		line-height: 1.65;
		margin: 0;
		font-weight: 400;
	}

	/* Geometric Separator - Removed for cleaner columns */
	.panel-separator {
		display: none;
	}

	.team-tagline {
		font-size: 1rem;
		color: var(--mid-gray);
		text-align: center;
		font-weight: 400;
		margin-top: 3rem;
	}

	/* Tablet */
	@media screen and (max-width: 1024px) {
		.team-panels {
			grid-template-columns: repeat(2, 1fr);
			gap: 3rem;
		}

		.member-panel {
			max-width: none;
		}

		.member-panel:nth-child(2),
		.member-panel:nth-child(3) {
			margin-top: 0;
		}
	}

	/* Mobile */
	@media screen and (max-width: 768px) {
		#team {
			padding: 5rem 1.5rem;
		}

		.team-header {
			margin-bottom: 3rem;
		}

		#team h2 {
			font-size: 2.5rem;
		}

		.team-subtitle {
			font-size: 1.1rem;
		}

		.team-panels {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.portrait-frame {
			height: 320px;
		}

		.member-name {
			font-size: 1.3rem;
		}
	}
</style>
